{
  "manifest_version": 3,
  "name": "URL Güvenlik Analiz Eklentisi",
  "version": "1.2",
  "description": "Google sonuçlarındaki URL'leri analiz eder.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.google.com/*",
    "*://*/*"  
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.google.com/search*",
        "*://www.google.com.tr/search*"  
      ],
      "js": ["content.js"],
      "run_at": "document_end" 
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/being.png",
        "icons/defacement.png",
        "icons/spam.png",
        "icons/malware.png",
        "icons/phishing.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"  
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/URLDetpng.png",
      "48": "icons/URLDetpng.png",
      "128": "icons/URLDetpng.png"
    }
  },
  "icons": {
    "16": "icons/URLDetpng.png",
    "48": "icons/URLDetpng.png",
    "128": "icons/URLDetpng.png"
  }
}